<UserControl x:Class="gamtetyper.UI.ConsoleMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gamtetyper.UI"
             mc:Ignorable="d" >

    <Grid Margin="3,0,0,0" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="14"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border x:Name="color" Background="WhiteSmoke" BorderBrush="White" BorderThickness="1"  Height="14" VerticalAlignment="Top" Margin="0,3,0,0"/>

        <StackPanel Grid.Column="1">
            <TextBlock x:Name="tldr" Text="Test Console Message (1)" TextWrapping="Wrap" Foreground="White" Margin="5,0,5,0" FontSize="14"/>
            <TextBlock x:Name="message" Text="Hello :) this is a test description for this item, if you see this then likely we've ran into a slight error" TextWrapping="Wrap" Foreground="White" Margin="5,0,5,0"/>
        </StackPanel>

    </Grid>
</UserControl>

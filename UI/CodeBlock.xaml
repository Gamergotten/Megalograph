<UserControl x:Class="gamtetyper.CodeBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gamtetyper"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="200">
    
    <Border x:Name="status_border" BorderBrush="#FFA0BBC1" BorderThickness="2" CornerRadius="1" Width="200" MinHeight="90" >
        <Border.RenderTransform>
            <TranslateTransform x:Name="transfrom_location" />
        </Border.RenderTransform>

        <Grid x:Name="main" Background="White" >

            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border x:Name="head" BorderBrush="Black" Background="#FFD548FF" BorderThickness="1" CornerRadius="1">
                <Label x:Name="typename" Content="Block Name" MouseDown="Label_MouseDown" MouseUp="Label_MouseUp" Margin="30,0,0,0"/>
            </Border>
            <StackPanel x:Name="Content_panel" Grid.Row="1" Margin="5,4,5,5">
       
            </StackPanel>

            <Border x:Name="out_connection" HorizontalAlignment="Right" Margin="0,0,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="30" Height="30" MouseLeftButtonDown="out_connection_MouseLeftButtonDown"  Background="#FFE2E2E2" BorderBrush="#FF5D5D5D" BorderThickness="1"/>
            <Border x:Name="in_connection" HorizontalAlignment="Left" VerticalAlignment="Top" Width="30" Height="30" Margin="0,0,0,0" MouseLeftButtonUp="in_connection_MouseLeftButtonUp"  Background="#FFE2E2E2" BorderBrush="#FF5D5D5D" BorderThickness="1" MouseLeftButtonDown="in_connection_MouseLeftButtonDown"/>


        </Grid>
    </Border>
</UserControl>

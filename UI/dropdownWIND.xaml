<Window x:Class="Megalograph.UI.dropdownWIND"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Megalograph.UI"
        mc:Ignorable="d"
        WindowStartupLocation="Manual"
        WindowStyle="None" Height="220" Width="180" Deactivated="Window_Deactivated">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="18"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="search" TextChanged="search_TextChanged"/>
        <!--ScrollViewer Grid.Row="1"-->
        <ListView x:Name="_content" Grid.Row="1" SelectionChanged="ListView_SelectionChanged" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Visible"/>
        <!--/ScrollViewer-->
    </Grid>
</Window>
